{
    "name": "victory-sokolov-blog",
    "type": "module",
    "version": "1.0.0",
    "private": true,
    "packageManager": "pnpm@10.24.0",
    "author": {
        "name": "Viktor Sokolov"
    },
    "license": "MIT",
    "engines": {
        "pnpm": ">= 8.15",
        "npm": "please use pnpm",
        "yarn": "please use pnpm",
        "node": ">=24.0.0"
    },
    "scripts": {
        "dev": "next dev --turbopack --experimental-https",
        "build": "next build",
        "start": "next start",
        "analyze": "ANALYZE=true pnpm run build",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "lint:mdx": "pnpm eslint content/**/*.mdx",
        "typecheck": "tsc --noEmit --pretty",
        "install:prod": "pnpm i --frozen-lockfile --prod",
        "commit": "cz",
        "prepare": "husky || true",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,tsx} --write",
        "format:check": "prettier --config ./.prettierrc src/**/*.{ts,tsx}",
        "prebuild": "pnpm generate",
        "generate": "npm-run-all generate:**",
        "generate:copyimages": "tsx ./lib/copy-images.ts",
        "generate:feed": "tsx ./lib/generate-feed.ts",
        "fetch-tips": "tsx --env-file .env ./lib/twitter-tips.mts",
        "spell-check": "spellchecker --config .spellcheckerrc.json",
        "knip": "knip",
        "knip:fix": "knip --fix"
    },
    "dependencies": {
        "@lhci/cli": "0.15.1",
        "@vercel/analytics": "^1.6.1",
        "@vercel/speed-insights": "^1.3.1",
        "@vsokolov/utils": "0.31.5",
        "axios": "^1.12.2",
        "file-type": "^21.1.1",
        "framer-motion": "^12.23.26",
        "gray-matter": "^4.0.3",
        "next": "^15.5.9",
        "next-mdx-remote": "^5.0.0",
        "next-pwa": "^5.6.0",
        "next-seo": "^6.8.0",
        "prism-react-renderer": "^2.4.1",
        "prismjs": "^1.30.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-icons": "^5.5.0",
        "react-wrap-balancer": "1.1.1",
        "rehype-slug": "^6.0.0",
        "remark": "^15.0.1",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^16.0.1",
        "sharp": "^0.34.5",
        "tailwindcss": "4.1.18",
        "twitter-api-v2": "^1.27.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "6.7.3",
        "@eslint/eslintrc": "^3.3.1",
        "@next/bundle-analyzer": "^15.5.4",
        "@tailwindcss/postcss": "4.1.18",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.0",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "commitizen": "^4.3.1",
        "eslint": "^9.39.2",
        "eslint-config-next": "^15.5.4",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-mdx": "^3.6.2",
        "eslint-plugin-no-floating-promise": "^2.0.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
        "feed": "^5.1.0",
        "husky": "^9.1.7",
        "knip": "^5.76.3",
        "lint-staged": "^16.2.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.7.4",
        "spellchecker-cli": "7.0.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "xml2json": "^0.12.0"
    },
    "pnpm": {
        "overrides": {
            "styled-react-modal>react": "19.2.1"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "pnpm run lint:fix"
        }
    }
}
