{
    "name": "victory-sokolov-blog",
    "type": "module",
    "version": "1.0.0",
    "private": true,
    "author": {
        "name": "Viktor Sokolov"
    },
    "license": "MIT",
    "engines": {
        "bun": ">= 1.2.4",
        "npm": "please use bun",
        "yarn": "please use bun",
        "node": ">=24.0.0"
    },
    "scripts": {
        "dev": "bun --bun next dev --experimental-https",
        "build": "bun --bun next build",
        "start": "bun --bun next start",
        "analyze": "ANALYZE=true bun run build",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "lint:mdx": "bun eslint content/**/*.mdx",
        "lint:style": "stylelint '**/*.css'",
        "lint:style:fix": "stylelint '**/*.css' --fix",
        "fix": "bun run lint:fix && bun run lint:style:fix",
        "typecheck": "tsc --noEmit --pretty",
        "install:prod": "bun install --frozen-lockfile --production",
        "commit": "cz",
        "prepare": "husky || true",
        "format": "prettier --config ./.prettierrc src/**/*.{ts,tsx} --write",
        "format:check": "prettier --config ./.prettierrc src/**/*.{ts,tsx}",
        "prebuild": "bun run generate",
        "generate": "npm-run-all generate:**",
        "generate:copyimages": "tsx ./lib/copy-images.ts",
        "generate:feed": "tsx ./lib/generate-feed.ts",
        "fetch-tips": "tsx --env-file .env ./lib/twitter-tips.mts",
        "spell-check": "spellchecker --config .spellcheckerrc.json",
        "knip": "knip",
        "knip:fix": "knip --fix"
    },
    "dependencies": {
        "@dreamsicle.io/stylelint-config-tailwindcss": "1.1.2",
        "@lhci/cli": "0.15.1",
        "@vercel/analytics": "^1.6.1",
        "@vercel/speed-insights": "^1.3.1",
        "@vsokolov/utils": "0.31.5",
        "axios": "^1.13.2",
        "file-type": "^21.1.1",
        "framer-motion": "^12.23.26",
        "gray-matter": "^4.0.3",
        "next": "^16.1.1",
        "next-mdx-remote": "^5.0.0",
        "next-pwa": "^5.6.0",
        "next-seo": "^7.0.1",
        "prism-react-renderer": "^2.4.1",
        "prismjs": "^1.30.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-icons": "^5.5.0",
        "react-wrap-balancer": "1.1.1",
        "rehype-slug": "^6.0.0",
        "remark": "^15.0.1",
        "remark-code-titles": "^0.1.2",
        "remark-html": "^16.0.1",
        "sharp": "^0.34.5",
        "tailwindcss": "4.1.18",
        "twitter-api-v2": "^1.28.0",
        "xml2json": "0.12.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "6.7.3",
        "@eslint/eslintrc": "^3.3.1",
        "@next/bundle-analyzer": "^16.1.1",
        "@tailwindcss/postcss": "4.1.18",
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.0",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "commitizen": "^4.3.1",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.1.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-mdx": "^3.6.2",
        "eslint-plugin-no-floating-promise": "^2.0.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "7.0.1",
        "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
        "feed": "^5.1.0",
        "husky": "^9.1.7",
        "knip": "^5.77.1",
        "lint-staged": "^16.2.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.7.4",
        "spellchecker-cli": "7.0.2",
        "stylelint": "16.26.1",
        "stylelint-config-standard": "39.0.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "webpack": "5.104.1",
        "xml2js": "0.6.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        },
        "lint-staged": {
            "*": "bun run lint:fix"
        }
    }
}
